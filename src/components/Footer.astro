---
const currentYear = new Date().getFullYear();

const links = [
  { label: 'Work', href: '/experience' },
  { label: 'Research', href: '/publications' },
  { label: 'Projects', href: '/projects' },
  { label: 'Blog', href: '/blog' },
];

const social = [
  { label: 'GitHub', href: 'https://github.com/shawntz' },
  { label: 'LinkedIn', href: 'https://linkedin.com/in/shawnschwartz' },
  { label: 'Twitter', href: 'https://twitter.com/shawnschwartz' },
  { label: 'Scholar', href: 'https://scholar.google.com' },
];
---

<footer class="py-16 page-section" style="border-top: 1px solid var(--border-subtle); opacity: 0;">
  <div class="max-w-[1800px] mx-auto px-8 sm:px-12 lg:px-20 xl:px-28 2xl:px-32">
    <div class="grid lg:grid-cols-12 gap-12 lg:gap-8 mb-16">
      <!-- Brand -->
      <div class="lg:col-span-4">
        <a 
          href="/"
          class="font-bold text-lg tracking-tighter transition-opacity hover:opacity-70 block mb-6"
          style="color: var(--ink-primary); font-family: 'Geist', 'Geist Placeholder', sans-serif;"
        >
          SHAWN SCHWARTZ
        </a>
        <p class="text-sm leading-relaxed max-w-sm" style="color: var(--ink-tertiary);">
          Software engineer, data scientist, and ML researcher. 
          Building intelligent systems that solve real problems at scale.
        </p>
      </div>
      
      <!-- Navigation -->
      <div class="lg:col-span-2 lg:col-start-7">
        <h4 class="text-xs font-mono uppercase tracking-widest mb-6" style="color: var(--ink-tertiary);">
          Navigation
        </h4>
        <ul class="space-y-3">
          {links.map((link) => (
            <li>
              <a 
                href={link.href}
                class="text-sm transition-opacity hover:opacity-70"
                style="color: var(--ink-primary);"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Social -->
      <div class="lg:col-span-2">
        <h4 class="text-xs font-mono uppercase tracking-widest mb-6" style="color: var(--ink-tertiary);">
          Connect
        </h4>
        <ul class="space-y-3">
          {social.map((link) => (
            <li>
              <a 
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm transition-opacity hover:opacity-70"
                style="color: var(--ink-primary);"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contact -->
      <div class="lg:col-span-2">
        <h4 class="text-xs font-mono uppercase tracking-widest mb-6" style="color: var(--ink-tertiary);">
          Contact
        </h4>
        <a 
          href="mailto:shawn@shawnschwartz.com"
          class="text-sm transition-opacity hover:opacity-70 block"
          style="color: var(--ink-primary);"
        >
          shawn@shawnschwartz.com
        </a>
      </div>
    </div>
    
    <!-- Bottom -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 pt-8" style="border-top: 1px solid var(--border-subtle);">
      <p class="text-xs" style="color: var(--ink-tertiary);">
        Â© {currentYear} Shawn Schwartz
      </p>
      <p class="text-xs" style="color: var(--ink-tertiary);">
        Built with <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="underline transition-opacity hover:opacity-70">Astro</a> & <a href="https://tailwindcss.com" target="_blank" rel="noopener noreferrer" class="underline transition-opacity hover:opacity-70">Tailwind</a>
      </p>
    </div>
  </div>
</footer>
