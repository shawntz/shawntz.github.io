---
import { Mail } from 'lucide-astro';
import { Icon } from 'astro-icon/components';

const links = [
  { 
    label: 'Email', 
    href: 'mailto:shawn@shawnschwartz.com', 
    value: 'shawn@shawnschwartz.com',
    icon: 'email'
  },
  { 
    label: 'GitHub', 
    href: 'https://github.com/shawntz', 
    value: 'github.com/shawntz',
    icon: 'github'
  },
  { 
    label: 'LinkedIn', 
    href: 'https://linkedin.com/in/shawnschwartz', 
    value: 'linkedin.com/in/shawnschwartz',
    icon: 'linkedin'
  },
  { 
    label: 'Bluesky', 
    href: 'https://bsky.app/profile/shawnschwartz.com', 
    value: '@shawnschwartz.com',
    icon: 'bluesky'
  },
  { 
    label: 'Substack', 
    href: 'https://shawntz.substack.com', 
    value: 'shawntz.substack.com',
    icon: 'substack'
  },
];
---

<section id="contact" class="py-24 lg:py-32 page-section" style="opacity: 0;">
  <div class="max-w-[1800px] mx-auto px-8 sm:px-12 lg:px-20 xl:px-28 2xl:px-32">
    <div class="grid lg:grid-cols-2 gap-16 lg:gap-24">
      <!-- Left: Heading -->
      <div>
        <span class="text-xs font-mono uppercase tracking-widest mb-6 block" style="color: var(--ink-tertiary);">
          Contact
        </span>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-display font-medium leading-[1.1] mb-8" style="color: var(--ink-primary);">
          Let's build something together
        </h2>
        <p class="text-lg leading-relaxed" style="color: var(--ink-secondary);">
          I'm actively looking for engineering roles where I can build systems, 
          solve hard problems, and ship products that matter.
        </p>
        
        <!-- Status -->
        <div class="flex items-center gap-3 mt-8">
          <span class="relative flex h-3 w-3">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-evergreen-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-3 w-3 bg-evergreen-500"></span>
          </span>
          <span class="text-sm font-medium" style="color: var(--ink-secondary);">
            Available for opportunities
          </span>
        </div>
      </div>
      
      <!-- Right: Links -->
      <div class="lg:pt-16">
        <div class="space-y-0">
          {links.map((link) => (
            <a 
              href={link.href}
              target={link.href.startsWith('mailto') ? undefined : '_blank'}
              rel={link.href.startsWith('mailto') ? undefined : 'noopener noreferrer'}
              class="group flex items-center justify-between py-6 transition-colors"
              style="border-bottom: 1px solid var(--border-subtle);"
            >
              <span class="flex items-center gap-3 text-xs font-mono uppercase tracking-wider" style="color: var(--ink-tertiary);">
                {link.icon === 'email' && (
                  <Mail class="w-4 h-4 flex-shrink-0" />
                )}
                {link.icon === 'github' && (
                  <Icon name="mdi:github" class="w-4 h-4 flex-shrink-0" />
                )}
                {link.icon === 'linkedin' && (
                  <Icon name="mdi:linkedin" class="w-4 h-4 flex-shrink-0" />
                )}
                {link.icon === 'bluesky' && (
                  <Icon name="simple-icons:bluesky" class="w-4 h-4 flex-shrink-0" />
                )}
                {link.icon === 'substack' && (
                  <Icon name="simple-icons:substack" class="w-4 h-4 flex-shrink-0" />
                )}
                {link.label}
              </span>
              <span class="text-lg font-medium group-hover:text-evergreen-600 dark:group-hover:text-evergreen-400 transition-colors flex items-center gap-3" style="color: var(--ink-primary);">
                {link.value}
                <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </span>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
