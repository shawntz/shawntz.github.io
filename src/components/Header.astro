---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="header-container">
	<nav class="main-nav">
		<div class="nav-brand">
			<a href="/" class="brand-link">
				<div class="brand-content">
					<img src="/src/reactji/avatar-line-drawn.png" alt="Shawn Schwartz" class="brand-avatar" />
					<div class="brand-text-content">
						<span class="brand-text">Shawn Schwartz</span>
						<span class="brand-subtitle">Cognitive Neuroscientist</span>
					</div>
				</div>
			</a>
		</div>
		
		<div class="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/software">Software</HeaderLink>
			<HeaderLink href="/publications">Publications</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/cv">CV</HeaderLink>
		</div>
		
		<div class="nav-mobile-toggle">
			<button class="mobile-menu-btn" aria-label="Toggle menu">
				<span></span>
				<span></span>
				<span></span>
			</button>
		</div>
		</nav>
</header>

<style>
	.header-container {
		position: sticky;
		top: 0;
		z-index: 100;
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(10px);
		border-bottom: 3px solid #000;
		box-shadow: 0 4px 0px 0px rgba(0,0,0,0.1);
		width: 100vw;
		margin-left: calc(-50vw + 50%);
		box-sizing: border-box;
	}
	
	.main-nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 2rem;
		padding: 1rem 2rem;
		max-width: 1200px;
		margin: 0 auto;
		width: 100%;
		position: relative;
	}
	
	.nav-brand {
		flex-shrink: 0;
	}
	
	.brand-link {
		text-decoration: none;
		color: inherit;
		display: flex;
		align-items: center;
		transition: all 0.2s ease;
	}

	.brand-content {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.brand-avatar {
		width: 3.5rem;
		height: 3.5rem;
		border-radius: 50%;
		border: 2px solid #000;
		box-shadow: 2px 2px 0px 0px rgba(0,0,0,1);
		transition: all 0.2s ease;
		flex-shrink: 0;
	}

	.brand-text-content {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 0.125rem; /* Consistent spacing between name and subtitle */
	}
	
	.brand-link:hover {
		transform: translateY(-1px);
	}

	.brand-link:hover .brand-avatar {
		transform: scale(1.05);
		box-shadow: 3px 3px 0px 0px rgba(0,0,0,1);
	}
	
	.brand-text {
		font-size: 1.5rem;
		font-weight: 800;
		color: rgb(var(--black));
		line-height: 1.1; /* Tighter line height for better vertical alignment */
		letter-spacing: -0.02em; /* Consistent letter spacing */
		text-shadow: 2px 2px 0px rgba(255,255,255,0.8);
		margin: 0; /* Remove any default margins */
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; /* Force consistent font family */
	}
	
	.brand-subtitle {
		font-size: 0.75rem;
		font-weight: 500;
		color: var(--slack-blue);
		text-transform: uppercase;
		letter-spacing: 0.05em;
		line-height: 1.2; /* Consistent line height */
		margin: 0; /* Remove any default margins */
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; /* Force consistent font family */
	}
	
	.nav-links {
		display: flex;
		align-items: center;
		gap: 0.75rem; /* Slightly more consistent spacing */
		flex: 1;
		justify-content: center;
		flex-wrap: nowrap; /* Prevent wrapping */
	}
	
	.nav-mobile-toggle {
		display: none;
		flex-shrink: 0;
	}
	
	.mobile-menu-btn {
		display: flex;
		flex-direction: column;
		gap: 4px;
		background: none;
		border: none;
		cursor: pointer;
		padding: 8px;
		border: 2px solid #000;
		background: var(--slack-green);
		box-shadow: 3px 3px 0px 0px rgba(0,0,0,1);
		transition: all 0.2s ease;
		position: relative;
	}

	.mobile-menu-btn::after {
		content: 'ðŸ“±';
		position: absolute;
		top: -12px;
		right: -12px;
		font-size: 0.8rem;
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.mobile-menu-btn:hover::after {
		opacity: 1;
	}
	
	.mobile-menu-btn:hover {
		transform: translate(-1px, -1px);
		box-shadow: 4px 4px 0px 0px rgba(0,0,0,1);
	}
	
	.mobile-menu-btn span {
		width: 20px;
		height: 2px;
		background: #000;
		transition: all 0.2s ease;
	}
	
	/* Dark mode support */
	.dark .header-container {
		background: rgba(31, 41, 55, 0.95);
		border-bottom-color: #374151;
	}
	
	.dark .brand-text {
		color: rgb(var(--white));
		text-shadow: 2px 2px 0px rgba(0,0,0,0.3);
	}
	
	.dark .mobile-menu-btn {
		border-color: #374151;
		background: var(--brutal-cyan);
	}
	
	.dark .mobile-menu-btn span {
		background: #000;
	}
	
	@media (max-width: 768px) {
		.main-nav {
			padding: 1rem;
		}
		
		.brand-avatar {
			width: 2.75rem;
			height: 2.75rem;
		}
		
		.brand-content {
			gap: 0.5rem;
		}
		
		.brand-text {
			font-size: 1.25rem;
			line-height: 1.1; /* Maintain consistent line height */
			letter-spacing: -0.02em; /* Consistent letter spacing */
		}
		
		.brand-subtitle {
			font-size: 0.65rem;
			line-height: 1.2; /* Maintain consistent line height */
			letter-spacing: 0.05em; /* Consistent letter spacing */
		}
		
		.nav-links {
			display: none;
		}
		
		.nav-mobile-toggle {
			display: block;
		}
		
		.nav-links.mobile-open {
			display: flex;
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			background: white;
			border-bottom: 3px solid #000;
			padding: 1rem;
			flex-direction: column;
			gap: 1rem;
			box-shadow: 0 6px 0px 0px rgba(0,0,0,0.1);
			width: 100vw;
			margin-left: calc(-50vw + 50%);
		}
		
		.dark .nav-links.mobile-open {
			background: rgb(31, 41, 55);
			border-bottom-color: #374151;
			width: 100vw;
			margin-left: calc(-50vw + 50%);
		}
	}
	
	@media (max-width: 480px) {
		.brand-avatar {
			width: 2.25rem;
			height: 2.25rem;
		}
		
		.brand-content {
			gap: 0.4rem;
		}
		
		.brand-text {
			font-size: 1.1rem;
			line-height: 1.1; /* Maintain consistent line height */
			letter-spacing: -0.02em; /* Consistent letter spacing */
		}
		
		.brand-subtitle {
			font-size: 0.6rem;
			line-height: 1.2; /* Maintain consistent line height */
			letter-spacing: 0.05em; /* Consistent letter spacing */
		}
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const mobileBtn = document.querySelector('.mobile-menu-btn');
		const navLinks = document.querySelector('.nav-links');
		
		if (mobileBtn && navLinks) {
			mobileBtn.addEventListener('click', () => {
				navLinks.classList.toggle('mobile-open');
				mobileBtn.setAttribute('aria-expanded', 
					navLinks.classList.contains('mobile-open') ? 'true' : 'false'
				);
			});
		}
	});
</script>
