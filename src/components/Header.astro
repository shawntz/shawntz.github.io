---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="header-container">
	<div class="page-container">
		<nav class="main-nav">
		<div class="nav-brand">
			<a href="/" class="brand-link">
				<span class="brand-text">Shawn Schwartz</span>
				<span class="brand-subtitle">Cognitive Neuroscientist</span>
			</a>
		</div>
		
		<div class="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/software">Software</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/cv">CV</HeaderLink>
		</div>
		
		<div class="nav-mobile-toggle">
			<button class="mobile-menu-btn" aria-label="Toggle menu">
				<span></span>
				<span></span>
				<span></span>
			</button>
		</div>
		</nav>
	</div>
</header>

<style>
	.header-container {
		position: sticky;
		top: 0;
		z-index: 100;
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(10px);
		border-bottom: 3px solid #000;
		box-shadow: 0 4px 0px 0px rgba(0,0,0,0.1);
	}
	
	.main-nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 2rem;
		padding: 1rem 0;
	}
	
	.nav-brand {
		flex-shrink: 0;
	}
	
	.brand-link {
		text-decoration: none;
		color: inherit;
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		transition: all 0.2s ease;
	}
	
	.brand-link:hover {
		transform: translateY(-1px);
	}
	
	.brand-text {
		font-size: 1.5rem;
		font-weight: 800;
		color: rgb(var(--black));
		line-height: 1.2;
		text-shadow: 2px 2px 0px rgba(255,255,255,0.8);
	}
	
	.brand-subtitle {
		font-size: 0.75rem;
		font-weight: 500;
		color: var(--academic-blue);
		text-transform: uppercase;
		letter-spacing: 0.05em;
		margin-top: -2px;
	}
	
	.nav-links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		flex: 1;
		justify-content: center;
	}
	
	.nav-mobile-toggle {
		display: none;
		flex-shrink: 0;
	}
	
	.mobile-menu-btn {
		display: flex;
		flex-direction: column;
		gap: 4px;
		background: none;
		border: none;
		cursor: pointer;
		padding: 8px;
		border: 2px solid #000;
		background: var(--brutal-yellow);
		box-shadow: 3px 3px 0px 0px rgba(0,0,0,1);
		transition: all 0.2s ease;
	}
	
	.mobile-menu-btn:hover {
		transform: translate(-1px, -1px);
		box-shadow: 4px 4px 0px 0px rgba(0,0,0,1);
	}
	
	.mobile-menu-btn span {
		width: 20px;
		height: 2px;
		background: #000;
		transition: all 0.2s ease;
	}
	
	/* Dark mode support */
	.dark .header-container {
		background: rgba(31, 41, 55, 0.95);
		border-bottom-color: #374151;
	}
	
	.dark .brand-text {
		color: rgb(var(--white));
		text-shadow: 2px 2px 0px rgba(0,0,0,0.3);
	}
	
	.dark .mobile-menu-btn {
		border-color: #374151;
		background: var(--brutal-cyan);
	}
	
	.dark .mobile-menu-btn span {
		background: #000;
	}
	
	@media (max-width: 768px) {
		.main-nav {
			padding: 1rem;
		}
		
		.brand-text {
			font-size: 1.25rem;
		}
		
		.brand-subtitle {
			font-size: 0.65rem;
		}
		
		.nav-links {
			display: none;
		}
		
		.nav-mobile-toggle {
			display: block;
		}
		
		.nav-links.mobile-open {
			display: flex;
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			background: white;
			border-bottom: 3px solid #000;
			padding: 1rem;
			flex-direction: column;
			gap: 1rem;
			box-shadow: 0 6px 0px 0px rgba(0,0,0,0.1);
		}
		
		.dark .nav-links.mobile-open {
			background: rgb(31, 41, 55);
			border-bottom-color: #374151;
		}
	}
	
	@media (max-width: 480px) {
		.brand-text {
			font-size: 1.1rem;
		}
		
		.brand-subtitle {
			font-size: 0.6rem;
		}
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const mobileBtn = document.querySelector('.mobile-menu-btn');
		const navLinks = document.querySelector('.nav-links');
		
		if (mobileBtn && navLinks) {
			mobileBtn.addEventListener('click', () => {
				navLinks.classList.toggle('mobile-open');
				mobileBtn.setAttribute('aria-expanded', 
					navLinks.classList.contains('mobile-open') ? 'true' : 'false'
				);
			});
		}
	});
</script>
