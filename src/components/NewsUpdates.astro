---
// News updates data - can be moved to a data file or CMS later
interface NewsUpdate {
  date: string;
  title: string;
  link?: string;
  category?: string;
}

const newsUpdates: NewsUpdate[] = [
  {
    date: '2024-12-15',
    title: 'Published new research on attention mechanisms in neural networks',
    link: '/blog/attention-mechanisms',
    category: 'Research'
  },
  {
    date: '2024-12-10',
    title: 'Launched ML pipeline optimization tool for production systems',
    link: '/projects/ml-pipelines',
    category: 'Engineering'
  },
  {
    date: '2024-12-05',
    title: 'Presented at NeurIPS 2024 on scalable learning systems',
    link: '/talks/neurips-2024',
    category: 'Speaking'
  },
  {
    date: '2024-11-28',
    title: 'Open-sourced new data processing framework',
    link: 'https://github.com',
    category: 'Open Source'
  },
  {
    date: '2024-11-20',
    title: 'Featured in TechCrunch for work on human-AI collaboration',
    link: 'https://techcrunch.com',
    category: 'Press'
  }
];

function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return new Intl.DateTimeFormat('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric'
  }).format(date);
}
---

<div class="news-updates">
  <h3 class="news-updates-title">News & Updates</h3>
  <ul class="news-updates-list">
    {newsUpdates.map((update, index) => (
      <li class="news-updates-item" data-index={index}>
        {update.link ? (
          <a 
            href={update.link} 
            class="news-updates-link"
            target={update.link.startsWith('http') ? '_blank' : undefined}
            rel={update.link.startsWith('http') ? 'noopener noreferrer' : undefined}
          >
            <span class="news-updates-bullet"></span>
            <div class="news-updates-content">
              <div class="news-updates-header">
                <time class="news-updates-date" datetime={update.date}>
                  {formatDate(update.date)}
                </time>
                {update.category && (
                  <span class="news-updates-category">{update.category}</span>
                )}
              </div>
              <p class="news-updates-title-text">{update.title}</p>
            </div>
            <svg 
              class="news-updates-arrow" 
              fill="none" 
              viewBox="0 0 24 24" 
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        ) : (
          <div class="news-updates-content-wrapper">
            <span class="news-updates-bullet"></span>
            <div class="news-updates-content">
              <div class="news-updates-header">
                <time class="news-updates-date" datetime={update.date}>
                  {formatDate(update.date)}
                </time>
                {update.category && (
                  <span class="news-updates-category">{update.category}</span>
                )}
              </div>
              <p class="news-updates-title-text">{update.title}</p>
            </div>
          </div>
        )}
      </li>
    ))}
  </ul>
</div>

<style>
  .news-updates {
    margin-top: 2rem;
  }

  .news-updates-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--ink-primary);
    font-family: var(--font-display, sans-serif);
  }

  .news-updates-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .news-updates-item {
    position: relative;
    opacity: 0;
    transform: translateX(-20px);
    animation: slideInNewsItem 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .news-updates-item[data-index="0"] {
    animation-delay: 0.1s;
  }

  .news-updates-item[data-index="1"] {
    animation-delay: 0.2s;
  }

  .news-updates-item[data-index="2"] {
    animation-delay: 0.3s;
  }

  .news-updates-item[data-index="3"] {
    animation-delay: 0.4s;
  }

  .news-updates-item[data-index="4"] {
    animation-delay: 0.5s;
  }

  .news-updates-link {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
    text-decoration: none;
    color: inherit;
    position: relative;
  }

  .news-updates-link:hover {
    background-color: var(--surface-secondary, rgba(0, 0, 0, 0.02));
    transform: translateX(4px);
  }

  .news-updates-content-wrapper {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem;
  }

  .news-updates-bullet {
    flex-shrink: 0;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.8), rgba(251, 191, 36, 0.8));
    margin-top: 0.5rem;
    position: relative;
  }

  .news-updates-bullet::before {
    content: '';
    position: absolute;
    inset: -4px;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.2), rgba(251, 191, 36, 0.2));
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .news-updates-link:hover .news-updates-bullet::before {
    opacity: 1;
  }

  .news-updates-content {
    flex: 1;
    min-width: 0;
  }

  .news-updates-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.375rem;
    flex-wrap: wrap;
  }

  .news-updates-date {
    font-size: 0.75rem;
    font-family: 'Geist Mono', 'Courier New', monospace;
    color: var(--ink-tertiary, rgba(0, 0, 0, 0.5));
    font-weight: 500;
    letter-spacing: 0.025em;
  }

  .news-updates-category {
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.125rem 0.5rem;
    border-radius: 0.25rem;
    background: var(--surface-tertiary, rgba(0, 0, 0, 0.05));
    color: var(--ink-secondary, rgba(0, 0, 0, 0.7));
  }

  .news-updates-title-text {
    font-size: 0.9375rem;
    line-height: 1.5;
    color: var(--ink-primary);
    margin: 0;
    font-weight: 400;
  }

  .news-updates-link:hover .news-updates-title-text {
    color: var(--accent-primary, #22c55e);
  }

  .news-updates-arrow {
    flex-shrink: 0;
    width: 1rem;
    height: 1rem;
    color: var(--ink-tertiary, rgba(0, 0, 0, 0.4));
    transition: all 0.2s ease;
    margin-top: 0.25rem;
  }

  .news-updates-link:hover .news-updates-arrow {
    color: var(--accent-primary, #22c55e);
    transform: translateX(4px);
  }

  @keyframes slideInNewsItem {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .news-updates-link,
    .news-updates-content-wrapper {
      padding: 0.75rem;
      gap: 0.75rem;
    }

    .news-updates-title {
      font-size: 1rem;
      margin-bottom: 1.25rem;
    }

    .news-updates-title-text {
      font-size: 0.875rem;
    }
  }
</style>

