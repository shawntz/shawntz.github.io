---
interface Props {
  title: string;
  description: string;
  type?: 'study' | 'finding' | 'method' | 'impact';
  status?: 'published' | 'in-press' | 'under-review' | 'in-progress';
  color?: 'blue' | 'green' | 'purple' | 'orange' | 'red';
  icon?: string;
  links?: {
    label: string;
    url: string;
    type?: 'paper' | 'data' | 'code' | 'demo';
  }[];
  featured?: boolean;
}

const { 
  title, 
  description, 
  type = 'study',
  status = 'published',
  color = 'blue',
  icon,
  links = [],
  featured = false
} = Astro.props;

const typeIcons = {
  'study': 'üî¨',
  'finding': 'üí°',
  'method': '‚öôÔ∏è',
  'impact': 'üéØ'
};

const statusColors = {
  'published': 'green',
  'in-press': 'blue',
  'under-review': 'orange',
  'in-progress': 'purple'
};

const colorSchemes = {
  'blue': {
    bg: 'from-blue-50 to-indigo-100 dark:from-blue-900 dark:to-indigo-800',
    border: 'border-blue-600',
    accent: 'text-blue-800 dark:text-blue-200',
    statusBg: 'bg-blue-100 dark:bg-blue-900',
    statusText: 'text-blue-800 dark:text-blue-200'
  },
  'green': {
    bg: 'from-green-50 to-emerald-100 dark:from-green-900 dark:to-emerald-800',
    border: 'border-green-600',
    accent: 'text-green-800 dark:text-green-200',
    statusBg: 'bg-green-100 dark:bg-green-900',
    statusText: 'text-green-800 dark:text-green-200'
  },
  'purple': {
    bg: 'from-purple-50 to-violet-100 dark:from-purple-900 dark:to-violet-800',
    border: 'border-purple-600',
    accent: 'text-purple-800 dark:text-purple-200',
    statusBg: 'bg-purple-100 dark:bg-purple-900',
    statusText: 'text-purple-800 dark:text-purple-200'
  },
  'orange': {
    bg: 'from-orange-50 to-amber-100 dark:from-orange-900 dark:to-amber-800',
    border: 'border-orange-600',
    accent: 'text-orange-800 dark:text-orange-200',
    statusBg: 'bg-orange-100 dark:bg-orange-900',
    statusText: 'text-orange-800 dark:text-orange-200'
  },
  'red': {
    bg: 'from-red-50 to-rose-100 dark:from-red-900 dark:to-rose-800',
    border: 'border-red-600',
    accent: 'text-red-800 dark:text-red-200',
    statusBg: 'bg-red-100 dark:bg-red-900',
    statusText: 'text-red-800 dark:text-red-200'
  }
};

const scheme = colorSchemes[color];
const displayIcon = icon || typeIcons[type];

const linkTypeStyles = {
  'paper': 'link-paper',
  'data': 'link-data',
  'code': 'link-code',
  'demo': 'link-demo'
};
---

<div class={`research-callout ${featured ? 'featured' : ''}`}>
  <div class={`callout-content neobrutalist-card bg-gradient-to-br ${scheme.bg} border-l-4 ${scheme.border} p-6`}>
    <div class="callout-header">
      <div class="title-section">
        {displayIcon && <span class="callout-icon">{displayIcon}</span>}
        <h3 class={`callout-title ${scheme.accent}`}>{title}</h3>
      </div>
      
      <div class="status-badges">
        <span class={`status-badge ${scheme.statusBg} ${scheme.statusText}`}>
          {status.replace('-', ' ').toUpperCase()}
        </span>
        <span class={`type-badge ${scheme.statusBg} ${scheme.statusText}`}>
          {type.toUpperCase()}
        </span>
      </div>
    </div>
    
    <p class="callout-description text-gray-700 dark:text-gray-300">{description}</p>
    
    {links.length > 0 && (
      <div class="callout-links">
        {links.map(link => (
          <a 
            href={link.url} 
            target="_blank" 
            rel="noopener noreferrer"
            class={`link-button ${linkTypeStyles[link.type || 'paper']} text-white`}
          >
            {link.type === 'paper' && 'üìÑ'}
            {link.type === 'data' && 'üìä'}
            {link.type === 'code' && 'üíª'}
            {link.type === 'demo' && 'üéÆ'}
            {!link.type && 'üîó'}
            {link.label}
          </a>
        ))}
      </div>
    )}
    
    {featured && (
      <div class="featured-indicator">
        <span class="featured-text">‚ú® Highlighted Research</span>
      </div>
    )}
  </div>
</div>

<style>
  .research-callout {
    margin: 2rem 0;
    position: relative;
  }
  
  .research-callout.featured {
    transform: scale(1.02);
  }
  
  .callout-content {
    position: relative;
    overflow: hidden;
  }
  
  .callout-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    gap: 1rem;
  }
  
  .title-section {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex: 1;
  }
  
  .callout-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }
  
  .callout-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0;
    line-height: 1.3;
  }
  
  .status-badges {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    flex-shrink: 0;
  }
  
  .status-badge,
  .type-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    text-align: center;
    border: 1px solid rgba(0,0,0,0.1);
    white-space: nowrap;
  }
  
  .callout-description {
    margin: 1rem 0;
    line-height: 1.6;
    font-size: 0.95rem;
  }
  
  .callout-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem; /* Increased spacing between buttons */
    margin-top: 1.5rem;
  }
  
  .link-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem; /* Increased padding for better proportions */
    text-decoration: none;
    font-weight: 600;
    font-size: 0.875rem;
    border: 2px solid #000;
    box-shadow: 2px 2px 0px 0px rgba(0,0,0,1);
    transition: all 0.2s ease;
    border-radius: 4px;
  }
  
  .link-button:hover {
    transform: translate(-1px, -1px);
    box-shadow: 3px 3px 0px 0px rgba(0,0,0,1);
  }

  /* Custom link button colors using new scheme */
  .link-paper {
    background: var(--primary-purple) !important;
    color: white !important;
  }
  
  .link-paper:hover {
    background: var(--primary-orange) !important;
  }
  
  .link-data {
    background: var(--primary-green) !important;
    color: white !important;
  }
  
  .link-data:hover {
    background: var(--primary-orange) !important;
  }
  
  .link-code {
    background: #333 !important;
    color: white !important;
  }
  
  .link-code:hover {
    background: var(--primary-orange) !important;
  }
  
  .link-demo {
    background: var(--primary-yellow) !important;
    color: black !important;
  }
  
  .link-demo:hover {
    background: var(--primary-orange) !important;
    color: white !important;
  }
  
  .featured-indicator {
    position: absolute;
    top: -8px;
    right: -8px;
    z-index: 10;
  }
  
  .featured-text {
    background: var(--brutal-yellow);
    color: #000;
    padding: 0.5rem 1rem;
    font-size: 0.75rem;
    font-weight: 700;
    border: 2px solid #000;
    box-shadow: 3px 3px 0px 0px rgba(0,0,0,1);
    border-radius: 4px;
    transform: rotate(12deg);
    white-space: nowrap;
  }
  
  /* Pulsing animation for featured callouts */
  .research-callout.featured::before {
    content: '';
    position: absolute;
    top: -4px;
    left: -4px;
    right: -4px;
    bottom: -4px;
    background: linear-gradient(45deg, var(--brutal-yellow), var(--brutal-pink), var(--brutal-cyan));
    border-radius: 12px;
    z-index: -1;
    opacity: 0.3;
    animation: pulse-border 3s ease-in-out infinite;
  }
  
  @keyframes pulse-border {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.02); }
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    .callout-header {
      flex-direction: column;
      align-items: stretch;
    }
    
    .status-badges {
      flex-direction: row;
      justify-content: flex-start;
    }
    
    .callout-links {
      justify-content: center;
    }
    
    .featured-indicator {
      position: static;
      text-align: center;
      margin-top: 1rem;
    }
    
    .featured-text {
      transform: none;
      display: inline-block;
    }
  }
  
  @media (max-width: 480px) {
    .research-callout.featured {
      transform: none;
    }
    
    .callout-title {
      font-size: 1.1rem;
    }
    
    .title-section {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
    
    .callout-icon {
      font-size: 1.25rem;
    }
  }
</style>