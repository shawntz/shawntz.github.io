          setTimeout(() => {
            element.style.fontSize = '2rem';
          }, 300);
        }
      });
    }, 2000);
  }
  
  function setupKonamiCode() {
    document.addEventListener('keydown', function(e) {
      konamiSequence.push(e.code);
      
      // Keep only the last 10 keys
      if (konamiSequence.length > 10) {
        konamiSequence.shift();
