---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { calculateReadingTime, generateStructuredData } from '../utils/readingTime';

type Props = CollectionEntry<'blog'>['data'] & {
  slug: string;
  content: string;
};

const { title, description, pubDate, updatedDate, heroImage, slug, content } = Astro.props;

// Calculate reading time
const readingStats = calculateReadingTime(content);

// Generate structured data
const structuredData = generateStructuredData({
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  slug,
  author: 'Shawn Schwartz'
});
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} image={heroImage} />
		
		<!-- Structured Data -->
		<script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
		
		<!-- Enhanced SEO Meta Tags -->
		<meta name="keywords" content="neuroscience, psychology, data science, research, stanford, cognitive science">
		<meta name="author" content="Shawn Schwartz">
		<meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
		<meta name="googlebot" content="index, follow">
		
		<!-- Article specific meta -->
		<meta property="article:author" content="Shawn Schwartz">
		<meta property="article:published_time" content={pubDate.toISOString()}>
		{updatedDate && <meta property="article:modified_time" content={updatedDate.toISOString()}>}
		<meta property="article:section" content="Research">
		<meta property="article:tag" content="neuroscience">
		<meta property="article:tag" content="psychology">
		<meta property="article:tag" content="data science">
		
		<style>
			body {
				background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
			}
			
			.article-container {
				max-width: 800px;
				margin: 0 auto;
				padding: 2rem 1rem;
			}
			
			.article-header {
				text-align: center;
				margin-bottom: 3rem;
			}
			
			.article-meta {
				display: flex;
				align-items: center;
				justify-content: center;
				gap: 1rem;
				margin-bottom: 2rem;
				flex-wrap: wrap;
			}
			
			.reading-time {
				background: var(--brutal-yellow);
				color: #000;
				padding: 0.5rem 1rem;
				border: 2px solid #000;
				font-weight: 600;
				font-size: 0.875rem;
				box-shadow: 3px 3px 0px 0px rgba(0,0,0,1);
			}
			
			.publish-date {
				color: rgb(var(--gray));
				font-weight: 500;
			}
			
			.hero-image {
				margin: 2rem 0;
				text-align: center;
			}
			
			.hero-image img {
				border: 3px solid #000;
				box-shadow: 6px 6px 0px 0px rgba(0,0,0,1);
				border-radius: 8px;
				max-width: 100%;
				height: auto;
			}
			
			.article-title {
				font-size: 3rem;
				font-weight: 800;
				line-height: 1.1;
				margin: 1rem 0;
				color: rgb(var(--black));
				text-shadow: 2px 2px 0px rgba(255,255,255,0.8);
			}
			
			.prose {
				background: white;
				border: 3px solid #000;
				box-shadow: 6px 6px 0px 0px rgba(0,0,0,1);
				padding: 2rem;
				margin: 2rem 0;
				border-radius: 8px;
				line-height: 1.7;
				font-size: 1.125rem;
			}
			
			.prose h2 {
				color: var(--academic-blue);
				font-size: 1.875rem;
				font-weight: 700;
				margin: 2rem 0 1rem 0;
				border-bottom: 3px solid var(--academic-blue);
				padding-bottom: 0.5rem;
			}
			
			.prose h3 {
				color: var(--academic-green);
				font-size: 1.5rem;
				font-weight: 600;
				margin: 1.5rem 0 0.75rem 0;
			}
			
			.prose p {
				margin-bottom: 1.5rem;
			}
			
			.prose code {
				background: #f1f5f9;
				color: #1e293b;
				padding: 0.125rem 0.375rem;
				border-radius: 0.25rem;
				border: 1px solid #cbd5e1;
				font-family: 'JetBrains Mono', monospace;
				font-size: 0.875em;
			}
			
			.prose pre {
				background: #1e293b;
				color: #e2e8f0;
				padding: 1.5rem;
				border-radius: 8px;
				border: 2px solid #000;
				box-shadow: 3px 3px 0px 0px rgba(0,0,0,1);
				overflow-x: auto;
				margin: 1.5rem 0;
			}
			
			.prose pre code {
				background: none;
				color: inherit;
				border: none;
				padding: 0;
			}
			
			.prose blockquote {
				border-left: 4px solid var(--academic-blue);
				background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
				margin: 2rem 0;
				padding: 1.5rem;
				font-style: italic;
				box-shadow: 2px 2px 0px 0px rgba(0,0,0,0.1);
			}
			
			.prose ul, .prose ol {
				margin: 1.5rem 0;
				padding-left: 2rem;
			}
			
			.prose li {
				margin-bottom: 0.5rem;
			}
			
			@media (max-width: 768px) {
				.article-container {
					padding: 1rem;
				}
				
				.article-title {
					font-size: 2rem;
				}
				
				.prose {
					padding: 1.5rem;
					font-size: 1rem;
				}
				
				.article-meta {
					flex-direction: column;
					gap: 0.5rem;
				}
			}
		</style>
	</head>

	<body class="bg-white dark:bg-gray-900">
		<Header />
		<main>
			<article class="article-container">
				<div class="article-header">
					<h1 class="article-title">{title}</h1>
					
					<div class="article-meta">
						<div class="reading-time">
							{readingStats.text}
						</div>
						<div class="publish-date">
							<FormattedDate date={pubDate} />
						</div>
						{updatedDate && (
							<div class="publish-date">
								Updated: <FormattedDate date={updatedDate} />
							</div>
						)}
					</div>
				</div>

				{heroImage && (
					<div class="hero-image">
						<img width={800} height={400} src={heroImage} alt={title} />
					</div>
				)}

				<div class="prose">
					<slot />
				</div>
				
				<!-- Article Footer with Sharing -->
				<div class="mt-12 p-6 bg-gradient-to-r from-blue-50 to-purple-50 dark:from-blue-900 dark:to-purple-900 border-3 border-black shadow-brutal">
					<div class="text-center">
						<h3 class="text-xl font-bold mb-4">Share this article</h3>
						<div class="flex justify-center gap-4 flex-wrap">
							<a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(`https://shawnschwartz.com/blog/${slug}/`)}`} 
							   target="_blank" 
							   class="bg-blue-500 text-white px-4 py-2 rounded font-medium hover:bg-blue-600 transition-colors">
								Share on Twitter
							</a>
							<a href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`https://shawnschwartz.com/blog/${slug}/`)}`} 
							   target="_blank" 
							   class="bg-blue-700 text-white px-4 py-2 rounded font-medium hover:bg-blue-800 transition-colors">
								Share on LinkedIn
							</a>
						</div>
					</div>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
