---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { calculateReadingTime } from '../../utils/readingTime';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf() // Most recent first
);

// Calculate reading time for each post
const postsWithReadingTime = posts.map(post => ({
	...post,
	readingTime: calculateReadingTime(post.body)
}));
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={`Blog - ${SITE_TITLE}`} description="Research insights, data science tutorials, and thoughts on cognitive neuroscience" />
		
		<!-- Enhanced SEO for blog index -->
		<meta name="keywords" content="neuroscience blog, psychology research, data science tutorials, stanford research, cognitive science">
		<meta name="robots" content="index, follow">
		
		<style>
			body {
				background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
			}
			
			.blog-container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 2rem 1rem;
			}
			
			.blog-header {
				text-align: center;
				margin-bottom: 4rem;
			}
			
			.blog-title {
				font-size: 3.5rem;
				font-weight: 800;
				margin-bottom: 1rem;
				color: rgb(var(--black));
				text-shadow: 2px 2px 0px rgba(255,255,255,0.8);
			}
			
			.blog-subtitle {
				font-size: 1.25rem;
				color: rgb(var(--gray));
				max-width: 600px;
				margin: 0 auto;
			}
			
			.posts-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
				gap: 2rem;
				margin-bottom: 4rem;
			}
			
			.post-card {
				background: white;
				border: 3px solid #000;
				box-shadow: 6px 6px 0px 0px rgba(0,0,0,1);
				border-radius: 8px;
				overflow: hidden;
				transition: all 0.2s ease;
				text-decoration: none;
				color: inherit;
			}
			
			.post-card:hover {
				transform: translate(-2px, -2px);
				box-shadow: 8px 8px 0px 0px rgba(0,0,0,1);
			}
			
			.post-image {
				width: 100%;
				height: 200px;
				object-fit: cover;
				border-bottom: 2px solid #000;
			}
			
			.post-content {
				padding: 1.5rem;
			}
			
			.post-title {
				font-size: 1.5rem;
				font-weight: 700;
				margin-bottom: 1rem;
				line-height: 1.3;
				color: rgb(var(--black));
			}
			
			.post-description {
				color: rgb(var(--gray-dark));
				margin-bottom: 1.5rem;
				line-height: 1.5;
			}
			
			.post-meta {
				display: flex;
				align-items: center;
				justify-content: space-between;
				flex-wrap: wrap;
				gap: 1rem;
			}
			
			.post-date {
				color: rgb(var(--gray));
				font-weight: 500;
				font-size: 0.875rem;
			}
			
			.reading-time-badge {
				background: var(--brutal-yellow);
				color: #000;
				padding: 0.25rem 0.75rem;
				border: 2px solid #000;
				font-weight: 600;
				font-size: 0.75rem;
				box-shadow: 2px 2px 0px 0px rgba(0,0,0,1);
				border-radius: 4px;
			}
			
			.featured-post {
				grid-column: 1 / -1;
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 2rem;
				background: linear-gradient(135deg, var(--brutal-cyan) 0%, var(--brutal-pink) 100%);
				color: #000;
			}
			
			.featured-post .post-content {
				display: flex;
				flex-direction: column;
				justify-content: center;
			}
			
			.featured-post .post-title {
				font-size: 2.5rem;
				margin-bottom: 1.5rem;
			}
			
			.featured-badge {
				background: #000;
				color: white;
				padding: 0.5rem 1rem;
				font-weight: 700;
				font-size: 0.875rem;
				margin-bottom: 1rem;
				display: inline-block;
				width: fit-content;
			}
			
			@media (max-width: 768px) {
				.blog-title {
					font-size: 2.5rem;
				}
				
				.posts-grid {
					grid-template-columns: 1fr;
					gap: 1.5rem;
				}
				
				.featured-post {
					grid-template-columns: 1fr;
				}
				
				.featured-post .post-title {
					font-size: 2rem;
				}
				
				.post-meta {
					flex-direction: column;
					align-items: flex-start;
					gap: 0.5rem;
				}
			}
		</style>
	</head>
	<body class="bg-white dark:bg-gray-900">
		<Header />
		<main class="blog-container">
			<div class="blog-header">
				<h1 class="blog-title">Research Blog</h1>
				<p class="blog-subtitle">Insights on cognitive neuroscience, data science, and research methodologies</p>
			</div>
			
			<div class="posts-grid">
				{postsWithReadingTime.map((post, index) => (
					<article class={`post-card ${index === 0 ? 'featured-post' : ''}`}>
						<a href={`/blog/${post.slug}/`}>
							{index === 0 && <div class="featured-badge">Latest Post</div>}
							
							{post.data.heroImage && (
								<img 
									src={post.data.heroImage} 
									alt={post.data.title}
									class="post-image"
									width={400}
									height={200}
								/>
							)}
							
							<div class="post-content">
								<h2 class="post-title">{post.data.title}</h2>
								<p class="post-description">{post.data.description}</p>
								
								<div class="post-meta">
									<div class="post-date">
										<FormattedDate date={post.data.pubDate} />
									</div>
									<div class="reading-time-badge">
										{post.readingTime.text}
									</div>
								</div>
							</div>
						</a>
					</article>
				))}
			</div>
			
			{postsWithReadingTime.length === 0 && (
				<div class="text-center py-16">
					<div class="neobrutalist-card bg-yellow-100 p-8 inline-block">
						<h2 class="text-2xl font-bold mb-4">Coming Soon!</h2>
						<p class="text-gray-700">New blog posts are in the works. Check back soon for insights on cognitive neuroscience and data science.</p>
					</div>
				</div>
			)}
		</main>
		<Footer />
	</body>
</html>
