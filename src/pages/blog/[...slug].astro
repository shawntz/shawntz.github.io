            data-repo="shawntz/shawntz.github.io"
            data-repo-id="MDEwOlJlcG9zaXRvcnkzNjcxODUzODc="
            data-category="Blog"
            data-category-id="DIC_kwDOFeLN684CzRPN"
            data-mapping="pathname"
            data-strict="1"
            data-reactions-enabled="1"
            data-emit-metadata="1"
            data-input-position="top"
            data-theme="preferred_color_scheme"
