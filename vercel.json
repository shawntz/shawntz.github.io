{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "npm ci",
  "redirects": [
    {
      "source": "/eyeris",
      "destination": "https://eyeris.shawnschwartz.com",
      "permanent": true
    },
    {
      "source": "/eyeris/:path*",
      "destination": "https://eyeris.shawnschwartz.com/:path*",
      "permanent": true
    },
    {
      "source": "/charisma",
      "destination": "https://charisma.shawnschwartz.com",
      "permanent": true
    },
    {
      "source": "/charisma/:path*",
      "destination": "https://charisma.shawnschwartz.com/:path*",
      "permanent": true
    },
    {
      "source": "/cassh",
      "destination": "https://cassh.shawnschwartz.com",
      "permanent": true
    },
    {
      "source": "/cassh/:path*",
      "destination": "https://cassh.shawnschwartz.com/:path*",
      "permanent": true
    },
    {
      "source": "/fmriprep-workbench",
      "destination": "https://fmri.shawnschwartz.com",
      "permanent": true
    },
    {
      "source": "/fmriprep-workbench/:path*",
      "destination": "https://fmri.shawnschwartz.com/:path*",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/llms.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=utf-8"
        }
      ]
    },
    {
      "source": "/llms-full.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=utf-8"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
